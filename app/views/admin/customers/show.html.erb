<%= render "layouts/section", title: @customer.last_name + "さんの会員詳細" %>

<table class="table table-borderless">
  <tbody>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>ユーザーネーム</td>
      <td><%= @customer.last_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= @customer.last_name_kana %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= render "status", customer: @customer %></td>
    </tr>
  </tbody>
</table>

<div class="text-center">
  <!--customersコントローラのedit.html.erbへ遷移-->
  <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success mr-3" %>
</div>