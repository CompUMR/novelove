<%= render "layouts/section", title: "小説新規投稿" %>

<%= form_with model: @item, url: items_path, method: :post, local: true do |f| %>
  <%= render "layouts/error_messages", resource: @item %>
  <%= render "public/component/form", f: f %>
  <%= f.submit "新規投稿", class: "btn btn-success d-block mx-auto" %>
<% end %>